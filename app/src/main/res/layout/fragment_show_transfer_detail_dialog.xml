<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transfer_detail_scroll_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="4dp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:id="@+id/transfer_detail_person_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error"
                android:layout_below="@+id/transfer_detail_person_title"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/transfer_detail_person_body"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transfer_detail_person_body"
                android:text="@string/account_number"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="4dp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:id="@+id/transfer_detail_accountnumber_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error"
                android:layout_below="@+id/transfer_detail_accountnumber_title"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/transfer_detail_accountnumber_body"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purpose"
                android:layout_below="@+id/transfer_detail_accountnumber_body"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="4dp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:id="@+id/transfer_detail_purpose_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error"
                android:layout_below="@+id/transfer_detail_purpose_title"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/transfer_detail_purpose_body"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transfer_type"
                android:layout_below="@+id/transfer_detail_purpose_body"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="4dp"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:id="@+id/transfer_detail_type_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/error"
                android:layout_below="@+id/transfer_detail_type_title"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/transfer_detail_type_body"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>