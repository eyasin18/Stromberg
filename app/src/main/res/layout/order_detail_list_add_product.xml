<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/order_detail_list_add_product_layout"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/order_detail_list_product_text_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_add_product"
        style="@style/TextAppearance.AppCompat.Title"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:layout_toRightOf="@+id/order_detail_list_amount"
        android:layout_toEndOf="@+id/order_detail_list_amount"
        android:padding="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_below="@+id/order_detail_list_product_text_big"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/separator" />

    <ImageView
        android:id="@+id/order_detail_list_amount"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="14dp"
        android:layout_centerVertical="true"
        android:ems="2"
        app:srcCompat="@drawable/ic_add_grey_24dp"
        android:gravity="center"/>

</RelativeLayout>