<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopping_list_product_layout"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/shopping_list_product_text_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/error"
        style="@style/TextAppearance.AppCompat.Title"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        android:layout_toRightOf="@+id/shopping_list_product_editText"
        android:layout_toLeftOf="@+id/shopping_list_product_delete"
        android:padding="16dp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/shopping_list_product_text_small"
        android:paddingTop="12dp"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        android:layout_toRightOf="@+id/shopping_list_product_editText"
        android:layout_toLeftOf="@+id/shopping_list_product_delete"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/shopping_list_product_text_error"
        android:textSize="10sp"
        android:textColor="@color/color_red"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shopping_list_product_text_small"
        android:layout_toRightOf="@+id/shopping_list_product_editText"
        android:layout_toLeftOf="@+id/shopping_list_product_delete"
        android:text="@string/can_only_be_bought_on_checkout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_below="@+id/shopping_list_product_text_big"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/separator" />

    <EditText
        android:id="@+id/shopping_list_product_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:ems="2"
        android:text="1"
        android:inputType="number"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:selectAllOnFocus="true"
        android:nextFocusUp="@+id/shopping_list_product_editText"
        android:nextFocusLeft="@+id/shopping_list_product_editText"/>

    <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>

    <ImageView
        android:id="@+id/shopping_list_product_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_close"
        android:padding="16dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"/>

</RelativeLayout>